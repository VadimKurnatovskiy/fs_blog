doctype html
html lang="en"
  head
    meta charset="utf-8"
    meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1"
    meta name="viewport" content="width=device-width, initial-scale=1.0"

    title= content_for?(:title) ? yield(:title) : "FS  Blog"
    link rel="icon" type="image/png" href="#{image_url("rails-logo.png")}"
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
      /! Le HTML5 shim, for IE6-8 support of HTML elements
      /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js"

    link rel="stylesheet" href="//cdn.jsdelivr.net/simplemde/latest/simplemde.min.css"
    = javascript_include_tag "//cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"
    = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/showdown/1.6.3/showdown.min.js"


  body
    nav.navbar.navbar-default.navbar-static-top.navbar-inverse
      .container
        .navbar-header
          button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar"
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand href="/" FS Blog
        #navbar.navbar-collapse.collapse
          =form_tag("/search", method: "get", class: "navbar-form navbar-left") do
              = label_tag(:search, "Search:", class: "form-control")
              = text_field_tag(:search)
              = submit_tag("Search", class: "btn btn-mdb-color btn-rounded btn-sm my-0 ml-sm-2")

          ul.nav.navbar-nav.navbar-right
            li.dropdown
              - if current_user
                a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"
                  i> class="glyphicon glyphicon-user"
                  = current_user
                  span< class="caret"
                ul.dropdown-menu role="menu"
                  li
                    a href="#{edit_user_registration_path}"
                      i> class="glyphicon glyphicon-edit"
                      | Edit account
                  li
                    a href="#{destroy_user_session_path}" data-method="delete"
                      i> class="glyphicon glyphicon-log-out"
                      | Sign out
              - else
                li
                  a href="#{new_user_session_path}"
                    i> class="glyphicon glyphicon-log-in"
                    | Sign in

    .container
      .row
        .col-lg-12
          = flash_messages
          = yield

    footer class="footer"
      .container.text-center
        p class="text-muted"  &copy; FS Blog, #{Date.today.year}
